@model Caristaniyaan.Dto.orderDetailViewModel
@{
    ViewBag.Title = "Order";
    Layout = "~/Views/Shared/_adminLayout.cshtml";
}
<div class="content-wrapper">
    <!-- Content Header (Page header) -->
    <section class="content-header">
        <h1>
            Brands
            <small>Add or view all your brands</small>
        </h1>
        <ol class="breadcrumb">
            <li><a href="@Url.Action("Index","Admin")"><i class="fa fa-dashboard"></i>Home</a></li>
            <li><a href="@Url.Action("Brands","Admin")">Brands</a></li>
        </ol>
    </section>
    <!-- Main content -->
    <section class="content">
        <div class="row">
            <!-- right column -->
            <div class="col-md-12">
                <!-- Horizontal Form -->
                <div class="box box-info" id="formBox">
                    <div class="box-header with-border">
                        <h3 class="box-title">Brands</h3>
                    </div>
                    <div class="alert alert-success collapse fade">
                        <button type="button" class="close" data-dismiss="alert">×</button>
                        <div class="alert-text">Successfully completed your action.</div>
                    </div>
                    <div class="alert alert-danger collapse fade">
                        <button type="button" class="close" data-dismiss="alert">×</button>
                        <div class="alert-text">Successfully completed your action.</div>
                    </div>

                    <h2 id="header">Order Details</h2>
                    <div class="row">
                        <div class="form-group col-md-6">
                            <label>Order No :</label><p>#@Model.Id<p>
                        </div>
                        <div class="form-group col-md-6">
                            <div class="col-md-4">
                                <label>Customer :</label><p>@Model.fname<p>
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="form-group col-md-12">
                            <label>Order Date :</label><p>@Model.date<p>
                        </div>
                    </div>
                    <div class="row">
                        <div class="form-group col-md-12">
                            <label>Address :</label><p>@Model.address<p>
                        </div>
                    </div>
                    <div class="row">
                        <div class="form-group col-md-6">
                            <label>Order Status :</label><p>@Model.status<p>
                        </div>
                    </div>
                    <div class="container">
                        <div class="row">
                            @if (Model.status == Caristaniyaan.Models.Status.pending)
                            {
                                <button class="btn btn-warning pull-right" id="orderProcess" data-model-id="@Model.Id">In Process</button>
                            }
                            <div class="lds-ellipsis"><div></div><div></div><div></div><div></div></div>

                        </div>
                    </div>
                </div>

                <div class="box">
                    <div class="box-header">
                        <h3 class="box-title">Hover Data Table</h3>
                    </div>
                    <!-- /.box-header -->
                    <div class="box-body">
                        <table id="OrderItems" class="table table-bordered table-hover">
                            <thead>
                                <tr>
                                    <th>Item Name</th>
                                    <th>Item Quantity</th>
                                    <th>Item Retail</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model.orderProducts)
                                {
                                    <tr>
                                        <td>@item.Product.name</td>
                                        <td>@item.Product.quantity</td>
                                        <td>@item.Product.price</td>
                                    </tr>
                                }
                            </tbody>
                            <tfoot>
                                <tr>
                                    <th>Item Name</th>
                                    <th>Item Quantity</th>
                                    <th>Item Retail</th>
                                </tr>
                            </tfoot>
                        </table>
                    </div>
                    <!-- /.box-body -->
                </div>
                <!-- /.box -->
            </div>
            <!--/.col (right) -->
        </div>
        <!-- /.row -->
    </section>
    <!-- /.content -->
</div>



