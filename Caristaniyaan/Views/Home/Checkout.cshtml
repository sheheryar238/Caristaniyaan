@model Caristaniyaan.Dto.orderViewModel
@{
                /**/

                ViewBag.Title = "Checkout";
                Layout = "~/Views/Shared/_Layout.cshtml";
}
<section class="banner">
    <div class="box h-200 bg-image-13">
        <div class="box-overlay text-left">
            <div class="container">
                <h1 class="box-heading box-heading-md p-b-0">Check Out</h1>
                <ul class="breadcrumbs">
                    <li><a href="home.aspx">Home</a></li>
                    <li>Check-Out</li>
                </ul>
            </div>
        </div>
    </div>
</section>
<section class="bg-pri-c relative bg-f5">
    <div class="container">
        <div class="content">
            <div class="row">
                <div class="col-sm-8">
                    <div class="panel-group">
                        <!--panel--><!--panel-->
                        <div class="panel panel-default">
                            <div class="panel-heading">
                                <h4 class="panel-title"><a>Account &amp; Billing details</a></h4>
                                <div class="alert alert-success collapse fade">
                                    <button type="button" class="close" data-dismiss="alert">×</button>
                                    <div class="alert-text">Successfully completed your action.</div>
                                </div>
                                <div class="alert alert-danger collapse fade">
                                    <button type="button" class="close" data-dismiss="alert">×</button>
                                    <div class="alert-text">Successfully completed your action.</div>
                                </div>
                            </div>
                            <div id="collapse2" class="panel-collapse collapse in" role="tabpanel" aria-expanded="true">
                                <div class="panel-body p-30">
                                    @using (Html.BeginForm("Order", "Request", FormMethod.Post, new { enctype = "multipart/form-data", id = "orderForm", @class = "form-horizontal" }))
                                    {
                                        <br>
                                        <div class="form-group required">
                                            <label class="col-sm-2 control-label" for="input-shipping-firstname">First Name</label>
                                            <div class="col-sm-10">
                                                @Html.ValidationMessageFor(c => c.fname)
                                                @Html.TextBoxFor(c => c.fname, new { @class = "form-control form-item", id = "fname", placeholder = "First Name" })
                                            </div>
                                        </div>
                                        <div class="form-group required">
                                            <label class="col-sm-2 control-label" for="input-shipping-lastname">Last Name</label>
                                            <div class="col-sm-10">
                                                @Html.ValidationMessageFor(c => c.lname)
                                                @Html.TextBoxFor(c => c.lname, new { @class = "form-control form-item", id = "lname", placeholder = "Last Name" })
                                            </div>
                                        </div>
                                        <div class="form-group required">
                                            <label class="col-sm-2 control-label" for="input-shipping-email">Email</label>
                                            <div class="col-sm-10">
                                                @Html.ValidationMessageFor(c => c.email)
                                                @Html.TextBoxFor(c => c.email, new { @class = "form-control form-item", id = "email", placeholder = "Email" })
                                            </div>
                                        </div>
                                        <div class="form-group required">
                                            <label class="col-sm-2 control-label" for="input-shipping-phoneno">Phone No</label>
                                            <div class="col-sm-10">
                                                @Html.ValidationMessageFor(c => c.phoneno)
                                                @Html.TextBoxFor(c => c.phoneno, new { @class = "form-control form-item", id = "phoneno", placeholder = "Phone no" })
                                            </div>
                                        </div>
                                        <div class="form-group required">
                                            <label class="col-sm-2 control-label" for="input-shipping-address-">Address </label>
                                            <div class="col-sm-10">
                                                @Html.ValidationMessageFor(c => c.address)
                                                @Html.TextBoxFor(c => c.address, new { @class = "form-control form-item", id = "address", placeholder = "Address" })
                                            </div>
                                        </div>
                                        <div class="form-group required">
                                            <label class="col-sm-2 control-label" for="input-shipping-city">City</label>
                                            <div class="col-sm-10">
                                                @Html.ValidationMessageFor(c => c.city)
                                                @Html.TextBoxFor(c => c.city, new { @class = "form-control form-item", id = "city", placeholder = "City" })
                                            </div>
                                        </div>
                                        <div class="form-group">
                                            <label class="col-sm-2 control-label" for="input-shipping-postcode">Post Code</label>
                                            <div class="col-sm-10">
                                                @Html.ValidationMessageFor(c => c.postcode)
                                                @Html.TextBoxFor(c => c.postcode, new { @class = "form-control form-item", id = "postcode", placeholder = "Post Code" })
                                            </div>
                                        </div>
                                        <div class="form-group required">
                                            <label class="col-sm-2 control-label" for="input-shipping-zone">Province</label>
                                            <div class="col-sm-10">
                                                @Html.EnumDropDownListFor(e => e.province, "Select Province", new { id = "province", @class = "form-control form-item selected" })
                                                @Html.ValidationMessageFor(e => e.province)
                                            </div>
                                        </div>
                                        <div class="form-group required">
                                            <label class="col-sm-2 control-label" for="input-shipping-country">Country</label>
                                            <div class="col-sm-10">
                                                @Html.EnumDropDownListFor(e => e.countary, "Select Country", new { id = "country", @class = "form-control form-item selected" })
                                                @Html.ValidationMessageFor(e => e.countary)
                                            </div>
                                        </div>
                                    }
                                </div>
                            </div>
                        </div>
                        <!--panel--><!--panel--><!--panel--><!--/panel-->
                    </div>
                </div>
                <div class="col-sm-4">
                    <div class="box-1">
                        <h3 class="line-default">Payment method</h3>
                        <div class="radio">
                            <label><input type="radio" name="payment_method" value="cod" checked="checked">Cash On Delivery</label>
                        </div>
                    </div>
                    <div class="box-1">
                        <h3>order summary</h3>
                        <ul class="list list-border m-b-10">
                            <li><b class="d-inline-block w-100">Subtotal:</b><span id="subTotal">$120,00</span></li>
                            <li><b class="d-inline-block w-100">Ship cost:</b>$12,00</li>
                        </ul>
                        <p class="cart-total"><b class="color-3 d-inline-block w-100">Total:</b><span id="Total">$142,00</span></p>
                        <input type="button" class="btn bg-dc4c46 m-t-20" id="orderbtn" value="Confirm Order">
                        <div class="lds-ellipsis"><div></div><div></div><div></div><div></div></div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
@section Scripts{
    @Scripts.Render("~/bundles/jqueryval")
}